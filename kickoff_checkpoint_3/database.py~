import psycopg2


# Use the database
def interact_with_database(command):
    # Connect and set up cursor
    connection = psycopg2.connect("dbname=sjors user=sjors")
    cursor = connection.cursor()

    # Execute the command
    cursor.execute()
    connection.commit()
    cursor.close()
    connection.close()


# Uploads a score into the hiscore table
def upload_score(name, score):
    interact_with_database("INSERT INTO score (name, score) VALUES ({}, {})"
                           .format(name, score))
    
def download_scores():
    interact_with_database("SELECT * FROM score")


# Main program logic
def program():
    pass


# Run the program
program()
